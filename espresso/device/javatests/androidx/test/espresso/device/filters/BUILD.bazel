        "//tools/mobile/devices/android/generic_foldable:google_33_x86_64",
    ],
    deps = [
        "//core/java/androidx/test/core",
        "//espresso/core/java/androidx/test/espresso",
        "//espresso/device/java/androidx/test/espresso/device/filters",
        "//ext/junit",
        "//runner/android_junit_runner",
        "//runner/rules",
        "//testapps/ui_testapp/java/androidx/test/ui/app:lib_neverlink",
        "//third_party/java/junit:junit-android",
    ],
