        "org.hamcrest:hamcrest-integration:%s" % HAMCREST_VERSION,
        "com.google.code.findbugs:jsr305:2.0.1",
        "org.jetbrains.kotlin:kotlin-stdlib:%s" % KOTLIN_VERSION,
        "androidx.test:annotation:%s" % ANNOTATION_VERSION,
