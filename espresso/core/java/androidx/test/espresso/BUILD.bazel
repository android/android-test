    name = "espresso_core_maven_artifact",
    src = ":espresso_core_release.aar",
    artifact_deps = [
        "androidx.annotation:annotation:%s" % ANDROIDX_ANNOTATION_VERSION,
        "androidx.test:core:%s" % CORE_VERSION,
        "androidx.test:runner:%s" % RUNNER_VERSION,
